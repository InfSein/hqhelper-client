{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "dist",
    "rootDir": "electron",
    "types": ["node", "electron"],
    "sourceMap": true
  },
  "include": ["electron/**/*.ts"],
  "exclude": ["node_modules", "hqhelper"]
}
